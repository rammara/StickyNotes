<Window x:Class="StickyNotes.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:StickyNotes.Models"
        Title="StickyNotes Settings" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <x:Array x:Key="doubleClickActions" Type="local:DoubleClickAction">
            <local:DoubleClickAction>EditWindow</local:DoubleClickAction>
            <local:DoubleClickAction>SettingsWindow</local:DoubleClickAction>
        </x:Array>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Double click action -->
        <TextBlock Grid.Row="0" 
                   Text="Select action on double click on icon in tray:" 
                   Margin="0,0,0,5"/>
        <ComboBox Grid.Row="1" 
                  ItemsSource="{Binding Source={StaticResource doubleClickActions}}"
                  SelectedItem="{Binding DoubleClickAction}"
                  Margin="0,0,0,15"/>

        <!-- Main hotkey -->
        <Border Grid.Row="2" 
                BorderBrush="LightGray" 
                BorderThickness="0,1,0,0" 
                Margin="0,0,0,15" 
                Padding="0,15,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Global Hotkey (opens new note)" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="{Binding MainHotkeyDisplay}" 
                               VerticalAlignment="Center"
                               FontFamily="Consolas"/>
                    <Button Grid.Column="1" 
                            Content="Change" 
                            Command="{Binding ChangeMainHotkeyCommand}" 
                            Width="80" 
                            Padding="10,3"/>
                </Grid>
                <TextBlock Grid.Row="2" 
                           Text="Default: SHIFT+F4" 
                           FontStyle="Italic" 
                           Foreground="Gray"/>
            </Grid>
        </Border>

        <!-- Start with Windows -->
        <CheckBox Grid.Row="3" 
                  Content="Start with Windows" 
                  IsChecked="{Binding StartWithWindows}" 
                  Margin="0,0,0,15"/>

        <!-- Save hotkey -->
        <Border Grid.Row="4" 
                BorderBrush="LightGray" 
                BorderThickness="0,1,0,0" 
                Margin="0,0,0,15" 
                Padding="0,15,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Save Hotkey (saves current note)" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="{Binding SaveHotkeyDisplay}" 
                               VerticalAlignment="Center"
                               FontFamily="Consolas"/>
                    <Button Grid.Column="1" 
                            Content="Change" 
                            Command="{Binding ChangeSaveHotkeyCommand}" 
                            Width="80" 
                            Padding="10,3"/>
                </Grid>
                <TextBlock Grid.Row="2" 
                           Text="Default: F2 (Ctrl+S also works)" 
                           FontStyle="Italic" 
                           Foreground="Gray"/>
            </Grid>
        </Border>

        <!-- Default save folder -->
        <Border Grid.Row="5" 
                BorderBrush="LightGray" 
                BorderThickness="0,1,0,0" 
                Margin="0,0,0,15" 
                Padding="0,15,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Default Save Folder" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding DefaultSaveFolder}" 
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                        <Button Grid.Column="1" 
                                Content="Change..." 
                                Command="{Binding ChangeDefaultFolderCommand}" 
                                Width="80" 
                                Margin="5,0"
                                Padding="10,3"/>
                        <Button Grid.Column="2" 
                                Content="Open" 
                                Command="{Binding OpenDefaultFolderCommand}" 
                                Width="80"
                                Padding="10,3"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <!-- Default font -->
        <Border Grid.Row="6" 
                BorderBrush="LightGray" 
                BorderThickness="0,1,0,0" 
                Margin="0,0,0,15" 
                Padding="0,15,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Default Font" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="{Binding DefaultFontDisplay}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                    <Button Grid.Column="1" 
                            Content="Change" 
                            Command="{Binding ChangeFontCommand}" 
                            Width="80"
                            Padding="10,3"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    Width="80" 
                    Margin="0,0,10,0"
                    Padding="10,5"/>
            <Button Content="Save" 
                    Command="{Binding SaveCommand}" 
                    Width="80"
                    Padding="10,5"
                    Background="#4CAF50"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>