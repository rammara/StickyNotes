<Window x:Class="StickyNotes.Views.HotkeyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Hotkey Combination" 
        Height="200" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        PreviewKeyDown="Window_PreviewKeyDown" Icon="pack://application:,,,/Icons/Childish-Note_24983.png" >

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Press the key combination you want to use:" 
                   Margin="0,0,0,10"
                   FontWeight="Medium"/>

        <Border Grid.Row="1" 
                BorderBrush="Gray" 
                BorderThickness="1" 
                CornerRadius="3"
                Background="#F5F5F5"
                Padding="15,10">
            <TextBlock Text="{Binding HotkeyDisplay}" 
                       FontSize="14"
                       FontWeight="Bold"
                       FontFamily="Consolas"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <TextBlock Grid.Row="2" 
                   Text="Note: The combination must include at least one non-modifier key (A-Z, 0-9, F1-F12, etc.)"
                   Margin="0,10,0,0"
                   FontStyle="Italic"
                   Foreground="Gray"
                   TextWrapping="Wrap"/>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    Width="80" 
                    Margin="0,0,10,0"
                    Padding="10,5"/>
            <Button Content="Reset" 
                    Command="{Binding ResetCommand}" 
                    IsEnabled="{Binding ComboSelected}"
                    Width="80" 
                    Margin="0,0,10,0"
                    Padding="10,5"/>
            <Button Content="Set" 
                    Command="{Binding SetCommand}" 
                    IsEnabled="{Binding ComboSelected}"
                    Width="80"
                    Padding="10,5"
                    Background="#4CAF50"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>