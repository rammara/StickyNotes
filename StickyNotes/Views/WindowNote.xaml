<Window x:Class="StickyNotes.Views.WindowNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" 
        Height="300" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="True"
        ResizeMode="CanResizeWithGrip"
        MouseLeftButtonDown="{Binding MouseLeftButtonDownCommand}"
        MouseMove="{Binding MouseMoveCommand}"
        MouseLeftButtonUp="{Binding MouseLeftButtonUpCommand}"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <Style x:Key="ScrollBarThumbStyle" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Grid>
                            <Rectangle Fill="#E0E0E0" RadiusX="10" RadiusY="10"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <Trigger Property="IsDragging" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomScrollBar" TargetType="ScrollBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumbStyle}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#FFFACD" 
                CornerRadius="5" 
                BorderThickness="1" 
                BorderBrush="#FFD700">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок окна -->
                <Border x:Name="TitleBar" Grid.Row="0" 
                        Height="30" 
                        Background="#FFEB3B"
                        CornerRadius="5,5,0,0"
                        MouseLeftButtonDown="{Binding MouseLeftButtonDownCommand}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="{Binding Title}" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0"
                                   FontWeight="SemiBold"/>

                        <!-- Кнопка Pin -->
                        <Button Grid.Column="1" 
                                Width="20" 
                                Height="20" 
                                Margin="5,0"
                                Command="{Binding TogglePinCommand}"
                                Style="{StaticResource WindowButtonStyle}">
                            <Path Data="M5,5 L15,5 L15,15 L5,15 Z" 
                                  Stroke="Gray" 
                                  StrokeThickness="2">
                                <Path.Style>
                                    <Style TargetType="Path">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                                <Setter Property="Fill" Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsPinned}" Value="False">
                                                <Setter Property="Fill" Value="Transparent"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Path.Style>
                            </Path>
                        </Button>

                        <!-- Кнопка закрытия -->
                        <Button Grid.Column="2" 
                                Width="20" 
                                Height="20" 
                                Margin="5,0,10,0"
                                Command="{Binding CloseCommand}"
                                Style="{StaticResource WindowButtonStyle}">
                            <Path Data="M5,5 L15,15 M15,5 L5,15" 
                                  Stroke="DarkGray" 
                                  StrokeThickness="2"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Текстовое поле -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBar}"/>
                    </ScrollViewer.Resources>

                    <TextBox x:Name="NoteTextBox"
                         Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         BorderThickness="0"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Hidden"
                         HorizontalScrollBarVisibility="Hidden"
                         FontFamily="{Binding FontFamily}"
                         FontSize="{Binding FontSize}"
                         FontWeight="{Binding FontWeight}"
                         FontStyle="{Binding FontStyle}"
                         VerticalContentAlignment="Top"
                         Padding="10"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Ресайз грип -->
        <Path Data="M0,20 L20,20 L20,0" 
              Stroke="DarkGray" 
              StrokeThickness="1"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Stretch="Uniform"
              Width="20"
              Height="20"/>
    </Grid>
</Window>