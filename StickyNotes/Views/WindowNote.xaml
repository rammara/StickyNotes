<Window x:Class="StickyNotes.Views.WindowNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cnv="clr-namespace:StickyNotes.Converters"
        Title="{Binding Title}" 
        Height="300" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="True"
        ResizeMode="CanResizeWithGrip"
        KeyDown="Window_KeyDown" Icon="/Icons/Childish-Note_24983.png">

    <Window.Resources>
        <cnv:BoolToRotationConverter x:Key="BoolToRotationConverter" />

        <!-- Pin icon for normal state -->
        <cnv:BoolToColorConverter x:Key="PinNormalColorConverter"
                                   TrueColor="#555555" 
                                   FalseColor="#888888"/>

        <!-- Pin icon for hovered state -->
        <cnv:BoolToColorConverter x:Key="PinHoverColorConverter"
                                   TrueColor="#333333" 
                                   FalseColor="#666666"/>

        <!-- Pin icon color for pressed state -->
        <cnv:BoolToColorConverter x:Key="PinPressedColorConverter"
                                   TrueColor="#222222" 
                                   FalseColor="#444444"/>

        <!-- Close icon color  -->
        <cnv:StaticColorConverter x:Key="CloseNormalColorConverter" Color="#555555"/>
        <cnv:StaticColorConverter x:Key="CloseHoverColorConverter" Color="#333333"/>
        <cnv:StaticColorConverter x:Key="ClosePressedColorConverter" Color="#222222"/>

        <Style x:Key="ScrollBarThumbStyle" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Grid>
                            <Rectangle Fill="#E0E0E0" RadiusX="10" RadiusY="10"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <Trigger Property="IsDragging" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomScrollBar" TargetType="ScrollBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumbStyle}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3">
                            <ContentPresenter 
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Pin button style -->
        <Style x:Key="PinIconStyle" TargetType="Path">
            <Setter Property="Fill" Value="Transparent"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="StrokeLineJoin" Value="Round"/>
            <Setter Property="StrokeStartLineCap" Value="Round"/>
            <Setter Property="StrokeEndLineCap" Value="Round"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <!-- Normal state -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsPinned}" Value="True"/>
                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="False"/>
                        <Condition Binding="{Binding IsPressed, RelativeSource={RelativeSource AncestorType=Button}}" Value="False"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Stroke" Value="#555555"/>
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsPinned}" Value="False"/>
                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="False"/>
                        <Condition Binding="{Binding IsPressed, RelativeSource={RelativeSource AncestorType=Button}}" Value="False"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Stroke" Value="#888888"/>
                </MultiDataTrigger>

                <!-- Hovered state -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsPinned}" Value="True"/>
                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True"/>
                        <Condition Binding="{Binding IsPressed, RelativeSource={RelativeSource AncestorType=Button}}" Value="False"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Stroke" Value="#333333"/>
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsPinned}" Value="False"/>
                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True"/>
                        <Condition Binding="{Binding IsPressed, RelativeSource={RelativeSource AncestorType=Button}}" Value="False"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Stroke" Value="#666666"/>
                </MultiDataTrigger>

                <!-- Pressed state -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsPinned}" Value="True"/>
                        <Condition Binding="{Binding IsPressed, RelativeSource={RelativeSource AncestorType=Button}}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Stroke" Value="#222222"/>
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsPinned}" Value="False"/>
                        <Condition Binding="{Binding IsPressed, RelativeSource={RelativeSource AncestorType=Button}}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Stroke" Value="#444444"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Close Icon style -->
        <Style x:Key="CloseIconStyle" TargetType="Path">
            <Setter Property="StrokeThickness" Value="1.6"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Stroke" Value="#555555"/>
            <Style.Triggers>
                <!-- Hovered style -->
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                    <Setter Property="Stroke" Value="#333333"/>
                </DataTrigger>
                <!-- Pressed style -->
                <DataTrigger Binding="{Binding IsPressed, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                    <Setter Property="Stroke" Value="#222222"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#FFFACD" 
                CornerRadius="5" 
                BorderBrush="#FFD700">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Window title -->
                <Border x:Name="TitleBar" Grid.Row="0" 
                        Height="30" 
                        Background="#FFEB3B"
                        CornerRadius="5,5,0,0"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="{Binding Title}" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0"
                                   FontWeight="SemiBold"/>

                        <!-- Pin button -->
                        <Button Grid.Column="1" 
                                Width="20" 
                                Height="20" 
                                Margin="5,0"
                                Command="{Binding TogglePinCommand}"
                                Style="{StaticResource WindowButtonStyle}">
                            <Grid Width="16" Height="16">
                                <Viewbox Stretch="Uniform">
                                    <Path Data="M12,17 L12,22 M9,10.76 A2,2,0,0,1,7.89,12.55 L6.11,13.45 A2,2,0,0,0,5,15.24 L5,16 A1,1,0,0,0,6,17 L18,17 A1,1,0,0,0,19,16 L19,15.24 A2,2,0,0,0,17.89,13.45 L16.11,12.55 A2,2,0,0,1,15,10.76 L15,7 A1,1,0,0,1,16,6 A2,2,0,0,0,16,2 L8,2 A2,2,0,0,0,8,6 A1,1,0,0,1,9,7 L9,10.76 Z"
                                          Style="{StaticResource PinIconStyle}">
                                        <Path.RenderTransform>
                                            <RotateTransform Angle="{Binding IsPinned, Converter={StaticResource BoolToRotationConverter}}"
                                                             CenterX="12" CenterY="12"/>
                                        </Path.RenderTransform>
                                    </Path>
                                </Viewbox>
                            </Grid>
                        </Button>

                        <!-- Close button -->
                        <Button Grid.Column="2"
                                Width="20" 
                                Height="20" 
                                Margin="5,0,10,0"
                                Command="{Binding CloseCommand}"
                                Style="{StaticResource WindowButtonStyle}">
                            <Grid Width="16" Height="16">
                                <Viewbox Stretch="Uniform">
                                    <Path Data="M2,2 L12,12 M12,2 L2,12"
                                          Style="{StaticResource CloseIconStyle}"/>
                                </Viewbox>
                            </Grid>
                        </Button>
                    </Grid>
                </Border>

                <!-- Scrollable TextBox -->
                <TextBox Grid.Row="1"
                         x:Name="NoteTextBox"
                         Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         BorderThickness="0"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="{Binding FontFamily}"
                         FontSize="{Binding FontSize}"
                         FontWeight="{Binding FontWeight}"
                         FontStyle="{Binding FontStyle}"
                         VerticalContentAlignment="Top"
                         Padding="10">
                    <TextBox.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBar}"/>
                    </TextBox.Resources>
                </TextBox>
            </Grid>
        </Border>

        <!-- Resize grip -->
        <Path Data="M0,20 L20,20 L20,0" 
              Stroke="DarkGray" 
              StrokeThickness="1"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Stretch="Uniform"
              Width="20"
              Height="20"/>
    </Grid>
</Window>